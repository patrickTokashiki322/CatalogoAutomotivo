@model CatalogoAutomotivo.MER.Categoria

@{
    ViewData["Title"] = "Categoria " + @Model.NomeCategoria;
}

<div>
    <h4>Categorias</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCategoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Img)
        </dt>
        <dd class="col-sm-10">
            <img src="~/@Model.Img" width="200" style="background-color:white; border-radius:10px" />
        </dd>
    </dl>
</div>

<div class="btn-toolbar" role="toolbar" aria-label="Barra com botões">
    <div class="btn-group me-2" role="group" aria-label="Botão Editar">
        <a asp-action="Edit" asp-controller="Categorias">
            <button type="button" class="btn btn-primary btn">Editar</button>
        </a>
    </div>
    <div class="btn-group me-2" role="group" aria-label="Botão Voltar">
        <a asp-action="Index" asp-controller="Categorias">
            <button type="button" class="btn btn-secondary">Voltar</button>
        </a>
    </div>
    <div class="btn-group" role="group" aria-label="Botão Deletar">
        <a asp-action="Delete" asp-controller="Categorias">
            <button type="button" class="btn btn-danger" asp-route-id="@Model.Id">Deletar</button>
        </a>
    </div>
</div>