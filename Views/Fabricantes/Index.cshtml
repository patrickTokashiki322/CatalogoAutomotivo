@model IEnumerable<CatalogoAutomotivo.MER.Fabricante>

@{
    ViewData["Title"] = "Fabricantes";
}

<div id="Fabricantes">
    <h2>Fabricantes</h2>

    <a asp-action="Create">
        <button type="button" class="btn btn-primary">Cadastrar</button>
    </a>
    <br />
    <hr />

    <div class="row row-cols-2 justify-content-between">
        @foreach (var item in Model)
        {
            <div class="card text-bg-white col-sm-6 col-md-3">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="@item.Img" class="card-img" alt="...">
                    @* <div class="card-img-overlay">
                <h5 class="card-title">@item.RazaoSocial</h5>
                </div> *@
                </a>
            </div>
        }
    </div>
</div>