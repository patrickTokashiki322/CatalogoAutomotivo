@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleSlidesOnly" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="3000">
            <img src="~/img/Carousel/Fiat_Uno.jpg" class="d-block w-100 img-fluid" alt="...">
        </div>
        <div class="carousel-item" data-bs-interval="3000">
            <img src="~/img/Carousel/Lancia_Stratos.jpg" class="d-block w-100 img-fluid" alt="...">
        </div>
        <div class="carousel-item" data-bs-interval="3000">
            <img src="~/img/Carousel/Renault_Alpine.jpg" class="d-block w-100 img-fluid" alt="...">
        </div>
    </div>
</div>

<br />

<div id="Categorias">
    <h2>Categorias</h2>

    <div class="row row-cols-2 justify-content-between">

        <div class="card text-bg-white col-sm-6 col-md-3">
            <img src="~/img/Categorias/Hatch.webp" class="card-img" alt="...">
            <div class="card-img-overlay">
                <h5 class="card-title">Hatch</h5>
            </div>
        </div>
        <div class="card text-bg-white col-sm-6 col-md-3">
            <img src="~/img/Categorias/Sedan.jpg" class="card-img" alt="...">
            <div class="card-img-overlay">
                <h5 class="card-title">Sedan</h5>
            </div>
        </div>
        <div class="card text-bg-white col-sm-6 col-md-3">
            <img src="~/img/Categorias/SUV.webp" class="card-img" alt="...">
            <div class="card-img-overlay">
                <h5 class="card-title">SUV</h5>
            </div>
        </div>
        <div class="card text-bg-white col-sm-6 col-md-3">
            <img src="~/img/Categorias/van.jpg" class="card-img" alt="...">
            <div class="card-img-overlay">
                <h5 class="card-title">Van</h5>
            </div>
        </div>
        <div class="card text-bg-white col-sm-6 col-md-3">
            <a asp-action="Index" asp-controller="Categorias">
                <div class="card-img-overlay" style="vertical-align:middle; line-height: 200px">
                    <h5 class="card-title">Mais Categorias</h5>
                </div>
            </a>
        </div>
    </div>
</div>